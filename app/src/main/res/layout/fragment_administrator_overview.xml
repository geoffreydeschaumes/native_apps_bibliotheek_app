<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
    <TextView
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/txtCountReservations"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/txtUsername" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            app:layout_constraintEnd_toStartOf="@+id/txtCountReservations" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.452"/>
</androidx.constraintlayout.widget.ConstraintLayout>